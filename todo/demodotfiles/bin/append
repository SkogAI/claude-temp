#!/bin/bash
# append — add a line to a .list file
# usage: append some raw idea          → appends to ~/INBOX.list
#        append path/to.list some idea  → appends to that file

if [[ "$1" == *.list ]]; then
    target="$1"
    shift
else
    target="$HOME/INBOX.list"
fi

[[ -z "$*" ]] && { echo "usage: append [file.list] text..." >&2; exit 1; }

echo "$*" >> "$target"
