# load the test helper from testing-framework
load ../testing-framework/test-helper

setup() {
    setup_test_dir
    # add project-specific setup here
}

teardown() {
    teardown_test_dir
}

@test "script handles missing arguments" {
    run "$SCRIPTS_DIR/your-script.sh"
    assert_failure
    assert_output_contains "usage:"
}

